<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.maurofokker</groupId>
	<artifactId>spring-um-app</artifactId>
	<version>0.0.1-SNAPSHOT</version>
    <modules>
        <module>common</module>
		<module>um-web</module>
        <module>common-client</module>
        <module>common-test</module>
        <module>um-client</module>
    </modules>
    <packaging>pom</packaging>

	<name>spring-um-app</name>
	<description>Demo project for Spring Boot</description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.4.RELEASE</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<properties>

		<!-- non-dependencies -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>

		<!-- persistence -->
		<validation-api.version>1.1.0.Final</validation-api.version>
		<hsqldb.version>2.3.4</hsqldb.version>


		<!-- commons and utils -->
		<guava.version>19.0</guava.version>
		<commons-lang3.version>3.4</commons-lang3.version>

		<rest-assured.version>2.9.0</rest-assured.version>

		<!-- marshalling -->
		<jaxb-api.version>2.2.12</jaxb-api.version>
		<xstream.version>1.4.9</xstream.version>

		<!-- maven plugins -->
		<maven-surefire-plugin.version>2.19.1</maven-surefire-plugin.version>
		<maven-compiler-plugin.version>3.5.1</maven-compiler-plugin.version>
		<maven-resources-plugin.version>3.0.1</maven-resources-plugin.version>

		<cargo-maven2-plugin.version>1.5.1</cargo-maven2-plugin.version>

		<tomcat.version>8.0.41</tomcat.version>
	</properties>

</project>
